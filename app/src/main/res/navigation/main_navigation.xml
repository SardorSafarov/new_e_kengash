<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.e_kengash.main.fragments.home.Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_appealsFragment"
            app:destination="@id/appealsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_newUserFragment"
            app:destination="@id/newUserFragment" />
        <action
            android:id="@+id/action_homeFragment_to_chatFragment"
            app:destination="@id/chatFragment" />
    </fragment>
    <fragment
        android:id="@+id/appealsFragment"
        android:name="com.example.e_kengash.main.fragments.appeals.Appeals"
        tools:layout="@layout/fragment_appeals" />
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.example.e_kengash.main.fragments.chat.Chat"
        tools:layout="@layout/fragment_chat" />
    <fragment
        android:id="@+id/newUserFragment"
        android:name="com.example.e_kengash.main.fragments.appealsSend.AppealsSend"
        tools:layout="@layout/fragment_appeals_send" />
    <fragment
        android:id="@+id/moreFragment"
        android:name="com.example.e_kengash.main.fragments.more.main.More"
        tools:layout="@layout/fragment_more" />

</navigation>