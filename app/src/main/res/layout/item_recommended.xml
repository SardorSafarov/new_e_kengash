<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/margin_padding_12"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="160dp"
        app:cardCornerRadius="@dimen/radius_6"
        app:cardElevation="@dimen/margin_padding_0"
        android:layout_height="160dp">
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/img_person_deputat"
            />
    </com.google.android.material.card.MaterialCardView>
    <TextView
        android:id="@+id/title"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="asdfasasdfasasdfasdfasdfasdfaasdfasdfasdfas"
        android:layout_marginTop="@dimen/margin_padding_12"
        />
</androidx.appcompat.widget.LinearLayoutCompat>