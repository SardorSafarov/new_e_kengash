<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="@dimen/radius_6"
        android:layout_marginHorizontal="@dimen/margin_padding_12"
        android:layout_marginTop="@dimen/margin_padding_12"
        android:layout_marginBottom="@dimen/margin_padding_6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/margin_padding_12"
            android:paddingVertical="@dimen/margin_padding_12"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Starus"
                android:textStyle="bold"
                android:textColor="#188D16"
                android:paddingHorizontal="12dp"
                android:paddingVertical="@dimen/margin_padding_8"
                android:background="@drawable/bg_button"
                android:backgroundTint="#CCFFCB"
                android:textSize="@dimen/text_size_16" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Starus"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginVertical="@dimen/margin_padding_8"
                android:textSize="@dimen/text_size_16" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Starus"
                android:layout_marginBottom="@dimen/margin_padding_12"
                android:textSize="@dimen/text_size_16" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/created"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Starus"
                android:textSize="@dimen/text_size_16" />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>